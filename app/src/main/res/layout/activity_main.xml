<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wipro.topgear.com.animation.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fade In"
        android:id="@+id/fadeIn"
        android:textStyle="normal|bold"
        android:textSize="30sp" />

    <Button
        android:text="ALPHA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alpha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Fade Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fadeout"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_toRightOf="@+id/alpha"
        android:layout_toEndOf="@+id/alpha"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/alpha"
        android:background="#000000"
        android:layout_height="5dp" />

    <Button
        android:text="Scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alpha"
        android:layout_alignRight="@+id/alpha"
        android:layout_alignEnd="@+id/alpha"
        android:layout_marginTop="69dp"
        android:id="@+id/scale" />

    <TextView
        android:text="Zoom in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scale"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/zoomin"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Zoom Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scale"
        android:layout_alignRight="@+id/fadeout"
        android:layout_alignEnd="@+id/fadeout"
        android:id="@+id/zoomout"
        android:textStyle="normal|bold"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/scale"
        android:background="#000000"
        android:layout_height="5dp"
        android:id="@+id/view2" />

    <TextView
        android:text="Rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rotate_text"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/move"
        android:layout_alignEnd="@+id/move" />

    <TextView
        android:text="Move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/move"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/zoomin"
        android:layout_alignEnd="@+id/zoomin"
        android:layout_marginBottom="55dp" />

    <Button
        android:text="Translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Translate"
        android:layout_above="@+id/move"
        android:layout_alignRight="@+id/rotate"
        android:layout_alignEnd="@+id/rotate"
        android:layout_marginBottom="27dp" />

    <View
        android:layout_width="fill_parent"
        android:background="#000000"
        android:layout_height="5dp"
        android:id="@+id/view"
        android:layout_above="@+id/Translate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp" />

    <Button
        android:text="Rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/rotate"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/scale"
        android:layout_alignStart="@+id/scale" />
</RelativeLayout>
